@page
@model ToDoList.Pages.TaskEntries.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>TaskEntry</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TaskEntry.Name" class="control-label"></label>
                <input asp-for="TaskEntry.Name" class="form-control" />
                <span asp-validation-for="TaskEntry.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskEntry.Description" class="control-label"></label>
                <input asp-for="TaskEntry.Description" class="form-control" />
                <span asp-validation-for="TaskEntry.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskEntry.Deadline" class="control-label"></label>
                <input asp-for="TaskEntry.Deadline" class="form-control" />
                <span asp-validation-for="TaskEntry.Deadline" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="TaskEntry.IsFinished" /> @Html.DisplayNameFor(model => model.TaskEntry.IsFinished))
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
